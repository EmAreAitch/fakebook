<% content_for(:title, 'WebAuthn') %>
<section class="max-w-3xl mx-auto">
  <header class="mb-6">
    <h1 class="text-3xl font-heading font-bold text-secondary-400">WebAuthn Credential Registration</h1>
    <p class="mt-2 text-secondary-300">Securely register your device for passwordless authentication using WebAuthn. Add a friendly nickname to identify your authenticator.</p>
  </header>

  <div id="new_webauthn_credential" class="w-full bg-primary-900 p-6 rounded-lg shadow-sm">
    <%= render partial: "form", locals: { credential: WebauthnCredential.new, error: nil } %>
  </div>

  <div class="flow-root mt-8">
    <ul id="webauthn_credentials" class="divide-y divide-primary-700">
      <%= render partial: "credential", collection: @credentials %>
    </ul>
  </div>

  <nav class="mt-6">
    <%= link_to "← Back", "#", onclick: "history.back()", class: "text-sm font-medium text-secondary-400 hover:text-secondary-300" %>    
  </nav>
</section>
