<div class="w-full max-w-5xl mx-auto text-gray-300">
  <% content_for :title, "Posts" %>

  <div id="posts" class="space-y-6">
    <% if @posts.load.any? %>
      <%= render @posts, posts_liked_ids: @posts_liked_ids, class: "bg-primary-800 rounded-xl shadow-xl" %>
    <% else %>
      <div class="flex flex-col items-center justify-center py-20 px-4 text-center bg-primary-800 rounded-xl shadow-lg">
        <h2 class="text-2xl font-semibold text-secondary-400 mb-4" style="font-family: var(--font-heading)">
          No posts to show yet
        </h2>
        <p class="text-gray-400 max-w-md mb-6" style="font-family: var(--font-body)">
          You're not following anyone yet. Head over to explore and find accounts that match your interests.
        </p>
        <%= link_to "Explore Posts", explore_posts_path, class: "px-5 py-2 rounded-full bg-accent-600 hover:bg-accent-500 text-primary-900 font-semibold transition duration-200" %>
      </div>
    <% end %>
  </div>
</div>
