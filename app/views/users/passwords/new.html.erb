 <div class="bg-opacity-70 p-6 rounded-xl">
      <h2 class="text-2xl font-semibold text-white mb-4 text-center">Forgot your password?</h2>

      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
        <%= render "users/shared/error_messages", resource: resource %>

        <div class="mb-6">
          <%= f.label :email, class: "block text-sm mb-1" %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "w-full px-4 py-2 rounded-md bg-primary-700 text-white focus:outline-none focus:ring-2 focus:ring-accent-500" %>
        </div>

        <div class="mb-4">
          <%= f.submit "Send me reset password instructions", class: "w-full bg-accent-500 hover:bg-accent-600 text-white font-semibold py-2 rounded-md transition duration-200" %>
        </div>
      <% end %>

      <div class="mt-6 text-sm text-center text-gray-400">
        <%= render "users/shared/links" %>
      </div>
</div>
