<div class="w-full max-w-md rounded-2xl p-8 mx-auto mt-10">
  <h2 class="text-3xl font-bold text-white text-center mb-6">Log in to your account</h2>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="space-y-6">
      <div>
        <%= f.label :email, class: "block text-sm font-medium text-gray-300" %>
        <%= f.email_field :email, autocomplete: "email", class: "mt-1 block w-full px-4 py-2 rounded-lg bg-primary-900 border border-primary-700 text-gray-100 focus:outline-none focus:ring-2 focus:ring-accent-500" %>
      </div>

      <div>
        <%= f.label :password, class: "block text-sm font-medium text-gray-300" %>
        <%= f.password_field :password, autocomplete: "current-password", class: "mt-1 block w-full px-4 py-2 rounded-lg bg-primary-900 border border-primary-700 text-gray-100 focus:outline-none focus:ring-2 focus:ring-accent-500" %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="flex items-center">
          <%= f.check_box :remember_me, class: "h-4 w-4 text-accent-500 focus:ring-accent-500 border-gray-300 rounded" %>
          <%= f.label :remember_me, class: "ml-2 block text-sm text-gray-300" %>
        </div>
      <% end %>

      <div>
        <%= f.submit "Log in", class: "w-full py-3 px-4 bg-accent-500 text-white font-semibold rounded-lg shadow-md hover:bg-accent-600 focus:outline-none focus:ring-2 focus:ring-accent-400" %>
      </div>
    </div>
  <% end %>

  <div class="mt-6 text-sm text-center text-gray-400">
    <%= render "users/shared/links" %>
  </div>
</div>
