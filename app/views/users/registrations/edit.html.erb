<div class="bg-opacity-70 p-6 rounded-xl bg-primary-800">
  <h2 class="text-2xl font-semibold text-white mb-4 text-center" style="font-family: var(--font-heading)">
    Edit <%= resource_name.to_s.humanize %>
  </h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
    <%= render "users/shared/error_messages", resource: resource %>

    <div class="mb-4">
      <%= f.label :username, class: "block text-sm mb-1 text-gray-200" %>
      <%= f.text_field :username, class: "w-full px-4 py-2 rounded-md bg-primary-700 text-white focus:outline-none focus:ring-2 focus:ring-accent-500" %>
    </div>

    <div class="mb-4">
      <%= f.label :email, class: "block text-sm mb-1 text-gray-200" %>
      <%= f.email_field :email, autocomplete: "email", class: "w-full px-4 py-2 rounded-md bg-primary-700 text-white focus:outline-none focus:ring-2 focus:ring-accent-500" %>
    </div>

    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <div class="mb-4 text-sm text-gray-400">
        Currently waiting confirmation for: <strong><%= resource.unconfirmed_email %></strong>
      </div>
    <% end %>

    <div class="mb-4">
      <%= f.label :password, class: "block text-sm mb-1 text-gray-200" %>
      <p class="text-xs text-gray-400 mb-1 italic">
        (leave blank if you donâ€™t want to change it)
      </p>
      <%= f.password_field :password, autocomplete: "new-password", class: "w-full px-4 py-2 rounded-md bg-primary-700 text-white focus:outline-none focus:ring-2 focus:ring-accent-500" %>
      <% if @minimum_password_length %>
        <p class="text-xs text-gray-400 mt-1">
          <%= @minimum_password_length %> characters minimum
        </p>
      <% end %>
    </div>

    <div class="mb-4">
      <%= f.label :password_confirmation, class: "block text-sm mb-1 text-gray-200" %>
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "w-full px-4 py-2 rounded-md bg-primary-700 text-white focus:outline-none focus:ring-2 focus:ring-accent-500" %>
    </div>

    <div class="mb-6">
      <%= f.label :current_password, class: "block text-sm mb-1 text-gray-200" %>
      <p class="text-xs text-gray-400 mb-1 italic">
        (we need your current password to confirm your changes)
      </p>
      <%= f.password_field :current_password, autocomplete: "current-password", class: "w-full px-4 py-2 rounded-md bg-primary-700 text-white focus:outline-none focus:ring-2 focus:ring-accent-500" %>
    </div>

    <div class="mb-6">
      <%= f.submit "Update", class: "w-full bg-accent-500 hover:bg-accent-600 text-primary-900 font-semibold py-2 rounded-md transition duration-200" %>
    </div>
  <% end %>

  <div class="border-t border-primary-700 pt-6 space-y-4">
    <h3 class="text-lg font-semibold text-white" style="font-family: var(--font-heading)">
      Cancel my account
    </h3>
    <p class="text-sm text-gray-400">
      Unhappy?
    </p>
    <%= button_to "Cancel my account",
          registration_path(resource_name),
          method: :delete,
          data: { confirm: "Are you sure?" },
          class: "w-full bg-red-600 hover:bg-red-500 text-white font-semibold py-2 rounded-md transition duration-200" %>

    <div class="text-center mt-4">
      <%= link_to "Back", :back, class: "text-accent-500 hover:underline" %>
    </div>
  </div>
</div>
